{
  "name": "agent-status",
  "version": "0.1.0",
  "description": "Fast TUI for AI agent account/usage status (Codex first)",
  "type": "module",
  "module": "src/index.ts",
  "bin": {
    "agent-status": "src/index.ts"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "start": "bun run src/index.ts",
    "typecheck": "bunx tsc --noEmit",
    "build": "bun build src/index.ts --compile --outfile dist/agent-status",
    "ci": "bun run typecheck && bun run build",
    "publish:npm": "npm publish --access public --provenance"
  },
  "dependencies": {
    "@opentui/core": "latest",
    "@opentui/react": "latest",
    "react": "^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "@types/react": "^19.0.0",
    "bun-types": "latest"
  },
  "engines": {
    "bun": ">=1.2.0"
  }
}
